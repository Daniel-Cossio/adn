<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<navigation-rule>
		<from-view-id>/pages/inputname.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>greeting</from-outcome>
			<to-view-id>/pages/greeting.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<application>
		<resource-bundle>
			<base-name>resources</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
	<managed-bean>
		<managed-bean-name>formulariobean</managed-bean-name>
		<managed-bean-class>beans.FormularioBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<faces-config>
		<validator>
			<validator-id>validatorTipoDocumento</validator-id>
			<validator-class>validators.ValidadorTipoDocumento</validator-class>
		</validator>
	</faces-config>
	<faces-config>
		<validator>
			<validator-id>validatorSoloTexto</validator-id>
			<validator-class>validators.ValidatorSoloTexto</validator-class>
		</validator>
	</faces-config>
</faces-config>